@model Author

@{
    ViewData["Title"] = "Modifying Authors";
}
<div class="text-center">
    <h2>@ViewData["Title"]</h2>
    <div class="creator">
        @using (Html.BeginForm("CreateAuthor", "Home"))
        {
            <div class="input-box">
                <label>Name</label>
                @Html.TextBoxFor(o => o.Name, new { @class = "text-box" })
            </div>
            <div class="input-box">
                <label>Country Of Birth</label>
                @Html.TextBoxFor(o => o.CountryOfBirth, new { @class = "text-box" })
            </div>
            <div class="input-box">
                <label>Year Of Birth</label>
                @Html.TextBoxFor(o => o.YearOfBirth, "2021", new { type = "number", @class = "text-box" })
            </div>
            <div class="submit-button">
                <input type="submit" value="Submit" />
            </div>
        }
    </div>
</div>
